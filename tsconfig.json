{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist" // Thư mục chứa file build
  },
  "include": ["src"], // Chỉ build các file trong src
  "exclude": ["node_modules"] // Loại trừ node_modules
}